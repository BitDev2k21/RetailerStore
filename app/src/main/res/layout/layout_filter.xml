<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_20sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/opensans_regular"
                android:lineSpacingExtra="25sp"
                android:text="Filters"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgCross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/icon_cross" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/opensans_regular"
                android:lineSpacingExtra="25sp"
                android:text="Shelf Life"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/iv_shelf_life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/icon_arrow_drop_down"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/opensans_regular"
                android:lineSpacingExtra="25sp"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/dark_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/opensans_regular"
                android:lineSpacingExtra="25sp"
                android:text="Product Type "
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/iv_product_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/icon_arrow_drop_down"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/opensans_regular"
                android:lineSpacingExtra="25sp"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/dark_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/opensans_regular"
                android:lineSpacingExtra="25sp"
                android:text="Company"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/iv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/icon_arrow_drop_down"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/opensans_regular"
                android:lineSpacingExtra="25sp"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/dark_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/opensans_regular"
            android:lineSpacingExtra="25sp"
            android:padding="@dimen/_10sdp"
            android:text="Price Range(â‚¹)"
            android:textColor="#757575"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText

                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:id="@+id/txtMin"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/min_lable"
                android:textSize="@dimen/_12sdp"
                android:backgroundTint="@color/black"
                android:textColor="#757575"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:id="@+id/txtMax"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:hint="@string/max"
                android:inputType="number"
                android:textSize="@dimen/_12sdp"
                android:backgroundTint="@color/black"
                android:textColor="#757575"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/dark_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/opensans_regular"
            android:lineSpacingExtra="25sp"
            android:padding="@dimen/_10sdp"
            android:text="Price Margin(%)"
            android:textColor="#757575"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:id="@+id/txtMinPriceMargin"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/min_lable"
                android:textSize="@dimen/_12sdp"
                android:backgroundTint="@color/black"
                android:textColor="#757575"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:id="@+id/txtMaxPriceMargin"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/max"
                android:textSize="@dimen/_12sdp"
                android:backgroundTint="@color/black"
                android:textColor="#757575"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/dark_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/opensans_regular"
                android:lineSpacingExtra="25sp"
                android:padding="@dimen/_10sdp"
                android:text="Most Ordered Product in Area"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_most_ordered_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_un_check" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtApplyFilter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_green_button"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:padding="14dp"
                android:text="Apply Filters"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtClearAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edit_search"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:padding="14dp"
                android:text="Clear All"
                android:textColor="@color/green"
                android:textSize="15sp"
                android:textStyle="normal" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>